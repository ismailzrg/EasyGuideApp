MDScreen:
    name: "secc_valide"
    MDFloatLayout:
        md_bg_color: [1, 1, 1, 1]

        Image:
            source: "pharmicon.png"
            size_hint: .22, .22
            pos_hint: {'center_x': .16,'center_y': .8}
        MDLabel:
            text: "EasyGuide"
            font_size: "34sp"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {'center_x': .78,'center_y': .8}
    
        MDLabel:
            text: "Votre Chemin Parfait ..."
            font_size: "22sp"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {'center_x': .78,'center_y': .75}

        MDLabel:
            text: "Votre email été valide "
            pos_hint: {'center_x': .7, 'center_y': .6}
            font_size: "22sp"
            color: 120/255, 120/255, 120/255, 1
        MDIconButton:
            icon: "check"
            user_font_size: "35sp"
            pos_hint: {'center_x': 0.82,'center_y': .6}
            color: 120/255, 120/255, 120/255, 1
        
        MDFloatLayout:
            size_hint: .5, .08
            pos_hint: {"center_x": .5, "center_y": .3}
            canvas.before:
                Color:
                    rgba: 2/255, 111/255, 207/255, 1  # Couleur bleue
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [23]
            Button:
                text: "Connexion"
                font_size: "20sp"
                size_hint: 1, 1
                pos_hint: {"center_x": .5, "center_y": .5}
                background_color: 0, 0, 0, 0
                on_release:
                    root.manager.current = "login"
